{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "program": "${workspaceFolder}\\node_modules\\nodemon\\bin\\nodemon.js",
            "args": [
                "./server/server.js"
            ],
        }, {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch client",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\",
            "program": "${workspaceFolder}\\node_modules\\react-scripts\\bin\\react-scripts.js",
            "args": [
                "start"
            ]
        }
    ]
}