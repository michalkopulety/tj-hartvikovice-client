{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "remoteRoot": "/usr/src/app"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\server\\",
            "program": "${workspaceFolder}\\server\\node_modules\\nodemon\\bin\\nodemon.js",
            "args": [
                "./server.js"
            ],
            "console": "integratedTerminal"
        },        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch client",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\client\\",
            "program": "${workspaceFolder}\\client\\node_modules\\react-scripts\\bin\\react-scripts.js",
            "args": [
                "start"
            ],
            "console": "integratedTerminal"
        }
    ]
}